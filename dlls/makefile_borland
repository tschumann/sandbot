CPP = bcc32 -w- -4

# uncomment the next line to turn on debugging information
#DEBUG = -v

# the following specifies the path to your MOD...
MOD_DIR = D:\Half-Life\tfc

INCLUDES = -I..\engine -I..\common -I..\pm_shared -I..\metamod

OBJ = bot.obj bot_client.obj bot_combat.obj bot_navigate.obj \
	bot_start.obj dll.obj engine.obj h_export.obj meta_api.obj util.obj \
        waypoint.obj


sandbot.dll:	${OBJ} linkfunc.obj
	ilink32 -c -aa -q -Gn -Tpd -m ${DEBUG} c0d32.obj ${OBJ} \
	linkfunc.obj, $@, sandbot.map, import32.lib cw32mt.lib, \
	sandbot_borland.def
	copy sandbot.dll ${MOD_DIR}\dlls\sandbot.dll /Y

linkfunc.obj:	linkfunc.cpp
	${CPP} ${DEBUG} ${INCLUDES} -u- -o$@ -c linkfunc.cpp

clean:
	-del *.obj
	-del *.dll
	-del *.map
	-del *.tds

.cpp.obj:
	${CPP} ${DEBUG} ${INCLUDES} -o$@ -c $<

.c.obj:
	${CPP} ${DEBUG} ${INCLUDES} -o$@ -c $<

